    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Api/bin/Debug/net6.0/Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Api.Tests",
            "type": "coreclr",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Api.Tests/bin/Debug/net7.0/Api.Tests.dll",
            "args": ["test"],
            "cwd": "${workspaceFolder}/Api.Tests",
            "request": "launch", // <--- this is the magic
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}